@model RegistersListViewModel

@{
    ViewData["Title"] = "Anagrafiche";
}

<h1>Anagrafiche</h1>

<div>
    <a class="btn btn-primary" asp-controller="Register" asp-action="AddRegister">Aggiungi anagrafica</a>
</div>

@if (Model.Registers != null && Model.Registers.Count > 0)
{
    <div class="row">
    @foreach (var register in Model.Registers)
    {
        <div class="col-4 p-3">
                <div class="row border border-1 shadow-sm">
                    <div class="col-3 d-flex align-items-center">
                        <img src="@register.Picture" alt="register picture" class="img-fluid rounded-circle border border-1 " style="aspect-ratio: 1/1" />
                    </div>

                    <div class="col-9 py-3">
                        <p class="my-1">Name: @register.Name</p>
                        <p class="my-1">Surname: @register.Surname</p>
                        <p class="my-1">Fiscal code: @register.FiscalCode</p>
                        <p class="my-1">Address: @register.Address</p>
                        <p class="my-1">City: @register.City, @register.CAP</p>
                        <a asp-controller="Register" asp-action="EditRegister" asp-route-id="@register.RegisterId" class="btn btn-sm btn-warning my-2">Edit</a>
                    </div>
            </div>
        </div>
    }
    </div>

}
else
{
    <p class="lead text-secondary">No registers in database</p>
}

<div>

</div>