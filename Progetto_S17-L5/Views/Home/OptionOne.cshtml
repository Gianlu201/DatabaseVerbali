@model List<OptionOneViewModel>

@{
    ViewData["Title"] = "OptionOne";
}

<h1>OptionOne</h1>

@if(Model != null && Model.Count >0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Fiscal code</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Number of verbals</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var element in Model)
            {
                <tr>
                    <td>@element.FiscalCode</td>
                    <td>@element.Name</td>
                    <td>@element.Surname</td>
                    <td>@element.NVerbals</td>
                </tr>
            }
        </tbody>


    </table>
}
else
{
    <p class="lead text-secondary">No results found, try again!</p>
}
